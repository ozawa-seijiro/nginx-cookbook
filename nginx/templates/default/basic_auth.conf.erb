server {
  listen 80;

  location / {
    auth_basic            "FXX K // Secret Smart Key";
    auth_basic_user_file  "/etc/nginx/.htpasswd";
    proxy_pass  http://127.0.0.1:1337;
    proxy_set_header        Host            $host;
  }
  location /healthcheck {
    satisfy any;
    allow all;
    proxy_pass  http://127.0.0.1:1337/healthcheck;
    proxy_set_header        Host            $host;
  }
}
